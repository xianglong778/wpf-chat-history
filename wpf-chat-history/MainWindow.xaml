<Window x:Class="wpf_chat_history.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_chat_history"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="1480"
        Height="760"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="#ededed"
        >

    <Window.Resources>
        <Color x:Key="SepLineBackgroundColor">#d5d5d5</Color>
        <SolidColorBrush x:Key="SepLineBackgroundBrush" Color="{StaticResource SepLineBackgroundColor}" />
    </Window.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" >

            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="2"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#f7f7f7">
                <TextBlock Text="群聊列表"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           FontSize="22"
                           FontWeight="Bold"
                           />   
            </Border>

            <Border Grid.Row="1" Background="{StaticResource SepLineBackgroundBrush}"></Border>

            <ListView Grid.Row="2" x:Name="SpeakGroupListView">

                <!-- 重写父样式 -->
                <ListView.Template>
                    <ControlTemplate TargetType="ListView">
                        <Border >
                            <ScrollViewer 
                                Padding="{TemplateBinding Padding}"
                                Focusable="False"
                                VerticalScrollBarVisibility="Hidden"
                                HorizontalScrollBarVisibility="Disabled">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </ListView.Template>

                <!-- 重写子样式 -->
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <!-- 默认背景色 -->
                        <Setter Property="Background" Value="Transparent"/>

                        <!-- 关键：定义基础模板确保样式生效 -->
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border 
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <!-- 鼠标悬停样式 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#dedede"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>

                            <!-- 选中样式 -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#d2d2d2"/>
                            </Trigger>

                            <!-- 选中且悬停样式 -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="#c7c7c7"/>
                            </MultiTrigger>
                        </Style.Triggers>

                    </Style>
                </ListView.ItemContainerStyle>

                <!-- 数据模板 -->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10 0 10 0">
                            <Grid>
                                <Grid.ColumnDefinitions >
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="190"/>
                                </Grid.ColumnDefinitions>
                                
                                <Grid Grid.Column="0">
                                    <Border Width="40" Height="40">
                                        <Border.Clip>
                                            <RectangleGeometry RadiusX="5" RadiusY="5" Rect="0,0,40,40"/>
                                        </Border.Clip>
                                        <Image Source="/Image/group.png"/>
                                    </Border>
                                </Grid>
                                
                                <Grid Grid.Column="1">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Height="30" Padding="0 8 0 0">
                                        <TextBlock 
                                            Width="190" 
                                            FontSize="16" 
                                            Foreground="#000000"
                                            Text="{Binding GroupName}"
                                            VerticalAlignment="Center"
                                            />
                                    </Border>

                                    <Border Grid.Row="1" Height="30" Padding="0 0 0 8">
                                        <TextBlock 
                                            Width="190" 
                                            FontSize="12" 
                                            Foreground="#666666"
                                            Text="{Binding GroupOwnerName}"
                                            VerticalAlignment="Center"
                                            />
                                    </Border>

                                </Grid>
                                
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

            <Border Grid.Row="3" Background="{StaticResource SepLineBackgroundBrush}"></Border>

            <Border Grid.Row="4" Background="#f7f7f7">
                <TextBlock Text="群聊列表"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           FontSize="22"
                           FontWeight="Bold"
                           />
            </Border>

        </Grid>

        <Border Grid.Column="1" Background="{StaticResource SepLineBackgroundBrush}"></Border>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="2"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0">
                <TextBlock x:Name="SpeakMessageRecordListHeader"
                           VerticalAlignment="Center"
                           TextAlignment="Left"
                           FontSize="22" 
                           Foreground="#000000"
                           Padding="20 0 0 0"
                           />
            </Border>

            <Border Grid.Row="1" Background="{StaticResource SepLineBackgroundBrush}"></Border>

            <ListView Grid.Row="2" x:Name="MessageRecordListView">

                <!-- 优化滚动行为 -->
                <ListView.Template>
                    <ControlTemplate TargetType="ListView">
                        <Border>
                            <ScrollViewer CanContentScroll="False">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </ListView.Template>

                <!-- 重写子样式 -->
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border 
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <!-- 鼠标悬停样式 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>

                            <!-- 选中样式 -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                    
                <!-- 数据模板 -->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="60"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Width="60" Height="60" Padding="10">
                                        <Border Width="40" Height="40" CornerRadius="5">
                                            <Border.Clip>
                                                <RectangleGeometry RadiusX="5" RadiusY="5" Rect="0,0,40,40"/>
                                            </Border.Clip>
                                            <Image Source="/Image/touxiang.png"/>
                                        </Border>
                                    </Border>
                                </Grid>
                                
                                <Grid Grid.Column="1">
                                    
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0">
                                        <TextBlock Text="{Binding MessageFromName}" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="14" 
                                                   Foreground="#000000"
                                                   />
                                    </Border>

                                    <Border Grid.Row="1"
                                            Width="Auto"
                                            MaxWidth="600"
                                            Height="Auto"
                                            MinHeight="40"
                                            Background="#ffffff"
                                            Padding="10"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            >
                                        <TextBlock Text="{Binding MessageText}"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="500"
                                                   VerticalAlignment="Center" 
                                                   FontSize="18" 
                                                   TextAlignment="Left"
                                                   Foreground="#000000" 
                                                   />
                                    </Border>

                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

            <Border Grid.Row="3" Background="{StaticResource SepLineBackgroundBrush}"></Border>

            <Border Grid.Row="4"></Border>

        </Grid>

    </Grid>

</Window>
